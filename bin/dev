#!/bin/sh

SESSION_NAME="haiku"

tmux has-session -t ${SESSION_NAME}

if [ $? != 0 ]
then
  # create session
  tmux new-session -s ${SESSION_NAME} -n MONITOR -d

  # start dev server
  tmux send-keys 'npm run start' C-m

  # split vertically (-)
  tmux split-window -v
fi
tmux attach -t ${SESSION_NAME}

